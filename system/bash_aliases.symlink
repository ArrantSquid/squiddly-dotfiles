####################
# FUNCTION ALIASES #
####################
deacenv()
{
    if command -v pyenv deactivate > /dev/null 2>&1
    then
        pyenv deactivate;
    fi
}

createenv()
{
    deacenv;
    pyenv virtualenv $1 $2;
    if [ -z "$2" ]
    then
        workon $1;
    else
        workon $2;
    fi
}

deleteenv()
{
    pyenv uninstall $1;
}

workon()
{
    deacenv;
    pyenv activate $1;
}

listenvs()
{
    pyenv virtualenvs;
}

